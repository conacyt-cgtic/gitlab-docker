---
gitlab:
  image: 'gitlab/gitlab-ce'
  restart: always
  hostname: 'gitlab.cgtic.conacyt.mx'
  links:
    - postgresql:postgresql
    - redis:redis
  environment:
    GITLAB_OMNIBUS_CONFIG: |
      postgresql['enable'] = false
      gitlab_rails['db_username'] = "gitlab"
      gitlab_rails['db_password'] = "gitlab"
      gitlab_rails['db_host'] = "postgresql"
      gitlab_rails['db_port'] = "5432"
      gitlab_rails['db_database'] = "gitlabhq_production"
      gitlab_rails['db_adapter'] = 'postgresql'
      gitlab_rails['db_encoding'] = 'utf8'
      redis['enable'] = false
      gitlab_rails['redis_host'] = 'redis'
      gitlab_rails['redis_port'] = '6379'
      external_url 'http://gitlab.cgtic.conacyt.mx:10080'
      gitlab_rails['gitlab_shell_ssh_port'] = 10022
  ports:
    # both ports must match the port from external_url above
    - "10080:10080"
    # the mapped port must match ssh_port specified above.
    - "10022:22"
# the following are hints on what volumes to mount if you want to persist data
  volumes:
    - /home/ubuntu/data/gitlab/config:/etc/gitlab:rw
    - /home/ubuntu/data/gitlab/logs:/var/log/gitlab:rw
    - /home/ubuntu/data/gitlab/data:/var/opt/gitlab:rw

postgresql:
  restart: always
  image: postgres:9.6.2-alpine
  environment:
    - POSTGRES_USER=gitlab
    - POSTGRES_PASSWORD=gitlab
    - POSTGRES_DB=gitlabhq_production
# the following are hints on what volumes to mount if you want to persist data
  volumes:
    - /home/ubuntu/data/postgresql:/var/lib/postgresql:rw

redis:
  restart: always
  image: redis:3.0.7-alpine
